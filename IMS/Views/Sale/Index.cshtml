@model IEnumerable<IMS.Data.Objects.Entities.Sale>

@{
    ViewBag.Title = "Index";
    var x = 1;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    td {
        text-align: center;
        vertical-align: middle;
    }

    th {
        text-align: center;
        vertical-align: middle;
    }
</style>
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
    <a href="@Url.Action("Create", "Sale")" class="btn btn-primary btn-sm pull-right" data-modal=""><i style="color: red;" class="fa fa-2x fa-plus"></i> Add</a>
</ul>
<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            <h4> SALES </h4>
            <h4><i class="fa fa-search-plus pull-right"></i></h4>
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SaleBillNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SaleProductName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SaleCustomer)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SaleDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SaleCostTotal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SaleBalance)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(x++)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleBillNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleCustomer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleCostTotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleBalance)
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", "Sale", new { id = item.SaleId })" data-modal=""><i style="color: blue;" class="fa fa-2x fa-file-text-o"></i></a>
                                    <a href="@Url.Action("Edit", "Sale", new { id = item.SaleId })" data-modal=""><i style="color: brown;" class="fa fa-2x fa-edit"></i></a>
                                    <a href="@Url.Action("Delete", "Sale", new { id = item.SaleId })" data-modal=""><i style="color: red;" class="fa fa-2x fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div><!-- /content-panel -->
    </div><!-- /col-lg-4 -->
</div><!-- /row -->
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.12.4.js"></script>
<script src="~/Scripts/Appjs/IMS.js"></script>

