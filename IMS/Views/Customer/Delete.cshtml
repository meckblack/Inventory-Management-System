@model IMS.Data.Objects.Entities.Customer

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Deleting Customer</h3>
</div>

<!--MODAL BODY-->
<div class="modal-body">
    <h3>
        Are you sure you want to delete @Html.DisplayFor(model => model.CustomerName)  ?
    </h3>
</div>

    @using (Html.BeginForm("Delete", "Customer", FormMethod.Post)) {
        @Html.AntiForgeryToken()
        
<!--MODAL FOOTER-->
        <div class="modal-footer">
            <input type="submit" value="Yes" class="btn btn-danger" />
            <button class="btn btn-warning" data-dismiss="modal">No</button>
        </div>
    }
