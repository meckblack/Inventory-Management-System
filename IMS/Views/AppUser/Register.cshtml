@model IMS.Data.Objects.Entities.AppUser

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AppUser</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.AppUserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AppUserName)
                @Html.ValidationMessageFor(model => model.AppUserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AppUserEmail, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AppUserEmail)
                @Html.ValidationMessageFor(model => model.AppUserEmail)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AppUserPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AppUserPassword)
                @Html.ValidationMessageFor(model => model.AppUserPassword)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AppUserComfirmPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AppUserComfirmPassword)
                @Html.ValidationMessageFor(model => model.AppUserComfirmPassword)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RoleId, "RoleId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RoleId", String.Empty)
                @Html.ValidationMessageFor(model => model.RoleId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
