@model IMS.Models.AppUser

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -kingsway</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!--external css-->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/style-responsive.css" rel="stylesheet">

    @Scripts.Render("~/bundles/jquery")

</head>

<body style="background-color: black">
    <div>
        <div id="login-page">
            <div class="container">
                @using (Html.BeginForm("Login", "AppUser", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <form class="form-login" action="index.html">
                        <h2 class="form-login-heading">sign in now</h2>
                        <div class="login-wrap">
                            @Html.TextBoxFor(model => model.AppUserName, new { @class = "form-control", @placeholder = "Username" })
                            @Html.ValidationMessageFor(model => model.AppUserName, "", new { @class = "text-danger" })
                            <br>
                            @Html.TextBoxFor(model => model.AppUserPassword, new { @class = "form-control", @type = "password", @placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.AppUserPassword, "", new { @class = "text-danger" })
                            <label class="checkbox">
                                <span class="pull-right">
                                    <a data-toggle="modal" href="login.html#myModal"> Forgot Password?</a>

                                </span>
                            </label>
                            <button class="btn btn-theme btn-block" href="index.html" type="submit"><i class="fa fa-lock"></i> SIGN IN</button>
                            <hr>

                            <div class="login-social-link centered">
                                <p>or you can sign in via your social network</p>
                                <button class="btn btn-facebook" type="#"><i class="fa fa-facebook"></i> Facebook</button>
                                <button class="btn btn-twitter" type="#"><i class="fa fa-twitter"></i> Twitter</button>
                            </div>
                            <div class="registration">
                                Don't have an account yet?<br />
                                <a class="" href="#">
                                    Create an account
                                </a>
                            </div>

                        </div>

                        <!-- Modal -->
                        @*<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title">Forgot Password ?</h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>Enter your e-mail address below to reset your password.</p>
                                        <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

                                    </div>
                                    <div class="modal-footer">
                                        <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                                        <button class="btn btn-theme" type="button">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>*@
                        <!-- modal -->

                    </form>
                }
            </div>
        </div>
    </div>

    <!--footer start-->
    @*<footer class="site-footer">
            <div class="text-center">
                &copy; @DateTime.Now.Year - Bizzdesk Global Group
                <a href="" class="go-top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>*@
    <!--footer end-->
    <!-- js placed at the end of the document so the pages load faster -->
    <!--BACKSTRETCH-->
    <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
    <script type="text/javascript" src="~/Scripts/jquery.backstretch.min.js"></script>
    <script>
        $.backstretch("~/Content/Image/login-bg.jpg", { speed: 500 });
    </script>
    <script src="~/Scripts/bootstrap.js"></script>

</body>
</html>


    

