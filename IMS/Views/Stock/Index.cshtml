@model IEnumerable<IMS.Data.Objects.Entities.Stock>

@{
    ViewBag.Title = "Index";
    var x = 1;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style>
    td {
        text-align: center;
        vertical-align: middle;
    }

    th {
        text-align: center;
        vertical-align: middle;
    }

    pdU {
        padding-right: 10px;
    }
</style>
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
    <a href="@Url.Action("Create", "Stock")" class="btn btn-primary btn-sm pull-right" data-modal=""><i style="color: red;" class="fa fa-2x fa-plus"></i> Add</a>
</ul>


<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            <h4>STOCKS</h4>
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>
                                S/N
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StockCategory.CategoryName)
                            </th>
                            <th>
                                Supplier Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StockName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StockBuyingPrice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StockSellingPrice)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(x++)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockCategory.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockSupplier.SupplierName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockBuyingPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockSellingPrice)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Stock", new { id = item.StockId })" data-modal=""><i style="color: sandybrown;" class="fa fa-2x fa-edit"></i></a>
                                    <a href="@Url.Action("Delete", "Stock", new { id = item.StockId })" data-modal=""><i style="color: red;" class="fa fa-2x fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                @*<h4>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                </h4>*@
            </section>
        </div><!-- /content-panel -->
    </div><!-- /col-lg-4 -->
</div><!-- /row -->
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.12.4.js"></script>
<script src="~/Scripts/Appjs/IMS.js"></script>

